<wux-backdrop id="wux-backdrop" transparent="{{ transparent }}" tt:if="{{ mask }}" />
<wux-animation-group wux-class="{{ classes.wrap }}"
                     in="{{ in }}" classNames="{{ classNames }}">
    <view class="{{ classes.content }}">
        <wux-icon wux-class="{{ classes.icon }}" type="{{ icon }}" size="55" color="{{ color }}" tt:if="{{ icon }}" />
        <view class="{{ classes.text }}">{{ text }}</view>
    </view>
</wux-animation-group>
